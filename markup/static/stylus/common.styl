// Common styles of the project

html, body
    height 100%
    overflow hidden


.page
    // Стили для body

.page__wrapper
    min-height 100%
    margin-bottom -50px


* html .page__wrapper
    height 100%

body
  background-color: #fff;
  display flex
  flex-direction column
  justify-content space-between
  height 100%
  margin 0
  padding 0
  .bottomSection
    display flex
    justify-content space-around
    height 188px
    width 100%

    @media (max-width: 450px)
        height 150px

    @media (max-width: 350px)
        height 100px
    .basket
      align-items center
      border 2px solid #000
      border-radius 10px
      color #000
      display flex
      font-size 25px
      justify-content center
      text-align center
      height 100%
      width 35%
      @media (max-width: 450px)
        font-size 18px
      @media (max-width: 350px)
        font-size 12px


.figure
  cursor pointer
  position absolute
  box-shadow rgba(0, 0, 0, 0) 0px 0px 25px
  transform scale(1)
  transition box-shadow 0.4s linear, transform 0.4s linear
  &_drag
    box-shadow rgba(0, 0, 0, 0.35) -5px 11px 25px
    transform scale(1.3)


.circle
  border-radius 100%
.countFigure,
.score
  font-size 24px
  margin 5px
  @media (max-width: 450px)
    font-size 18px
  @media (max-width: 350px)
    height 16px
